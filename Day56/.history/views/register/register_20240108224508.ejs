<div
  class="col-4 position-absolute top-50 start-50 translate-middle border border-primary rounded p-4"
>
  <h1 class="text-primary row justify-content-center mb-4">Đăng ký</h1>
  <form action="" method="post" class="row justify-content-center">
    <div class="mb-3">
      <label for="" class="form-label">Email của bạn</label>
      <input type="email" class="form-control" name="email" />
      <span class="text-danger"><%= req.errors.email %></span>
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Password của bạn</label>
      <input type="password" class="form-control" name="password" />
      <span class="text-danger"><%= req.errors.password %></span>
    </div>
    <div class="mb-3">
      <label for="" class="form-label">Nhập lại password của bạn</label>
      <input type="password" class="form-control" name="rePassword" />
      <span class="text-danger"><%= req.errors.rePassword %></span>
      <span class="text-danger"><%= req.errors.errRepassword %></span>
      <!-- <span class="text-danger"><%= req.errors.emailExist %></span> -->
    </div>
    <p class="mb-3">
      Đã có tài khoản ?
      <span class="text-primary"
        ><a href="/users/login">Đăng nhập ngay!</a></span
      >
    </p>
    <button type="submit" class="btn btn-primary mt-4 col-10">Đăng ký</button>
  </form>
</div>
<% if (req.errors.emailExist) { %>
<div>Tạo tài khoản thành công</div>
<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
  <div class="toast-header">
    <img src="..." class="rounded me-2" alt="..." />
    <strong class="me-auto">Bootstrap</strong>
    <small>11 mins ago</small>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="toast"
      aria-label="Close"
    ></button>
  </div>
  <div class="toast-body">Hello, world! This is a toast message.</div>
</div>
<% } %>
